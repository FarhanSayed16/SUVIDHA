# Database (Production configs must isolate host strings)
DATABASE_URL=postgresql://<user>:<password>@<host>:<port>/<dbname>

# Security & Auth (MUST be crypto-strength randomized in Production)
JWT_SECRET=your_production_jwt_master_secret_here
OTP_MOCK_FLAG=true
# OTP_PROVIDER_KEY=your_twilio_or_msg91_key (if not mocking)

# API Gateway & Services Port Routing
GATEWAY_PORT=8080

AUTH_SERVICE_URL=http://localhost:3001
ELECTRICITY_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
DOCUMENT_SERVICE_URL=http://localhost:3004

# Kiosk UI Environment (Vite)
VITE_GATEWAY_URL=http://localhost:8080/api
